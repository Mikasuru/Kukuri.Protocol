{
    "name": "Legacy Theme",
    "author": "System",
    "version": "1.0",
    "assets": {},
    "styles": {
        "window": {
            "background": "#2d2d2d",
            "font_family": "Arial",
            "font_size": 12
        },
        "chat_area": {
            "background": "#2d2d2d",
            "text_color": "#ffffff",
            "message_spacing": 5,
            "sent_message_bg": "#0084FF",
            "received_message_bg": "#E4E6EB",
            "timestamp_color": "#808080",
            "message_padding": [8, 12, 8, 12],
            "border_radius": 20
        },
        "sent_message": {
            "background": "#0084FF",
            "text_color": "#ffffff",
            "border_radius": 20,
            "padding": [8, 12, 8, 12],
            "font_size": 14
        },
        "received_message": {
            "background": "#3a3b3c",
            "text_color": "#ffffff",
            "border_radius": 20,
            "padding": [8, 12, 8, 12],
            "font_size": 14
        },
        "buttons": {
            "background": "#0084FF",
            "text_color": "#ffffff",
            "border_radius": 20,
            "padding": [8, 15, 8, 15],
            "hover_background": "#0078E9",
            "pressed_background": "#006ACC"
        },
        "input_field": {
            "background": "#1a1a1a",
            "text_color": "#ffffff",
            "border_color": "#3d3d3d",
            "border_radius": 20
        },
        "contact_list": {
            "background": "#1a1a1a",
            "selected_background": "#2d2d2d",
            "text_color": "#ffffff",
            "offline_color": "#808080",
            "online_color": "#00ff00",
            "unread_color": "#ff0000",
            "hover_background": "rgba(255, 255, 255, 0.1)"
        },
        "scrollbar": {
            "background": "#1a1a1a",
            "handle_color": "#3d3d3d",
            "handle_hover_color": "#4d4d4d",
            "width": 8
        }
    }
}